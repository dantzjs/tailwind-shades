{
  "author": "@DantzJs",
  "license": "MIT",
  "type": "module",
  "name": "tw-shades",
  "version": "1.3.2",
  "description": "Automatically generate and apply shades for Tailwindcss",
  "main": "./dist/tw-shades.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite-node src/main.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cz": "npx cz",
    "release": "commit-and-tag-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dantzjs/tailwind-shades.git"
  },
  "keywords": [
    "tailwind",
    "colors",
    "css",
    "shades",
    "color-shades"
  ],
  "bugs": {
    "url": "https://github.com/dantzjs/tailwind-shades/issues"
  },
  "homepage": "https://github.com/dantzjs/tailwind-shades#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "commit-and-tag-version": "^12.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-regexp": "^2.3.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "prettier": "3.2.5",
    "typescript": "^5.4.3",
    "vite": "^5.2.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
